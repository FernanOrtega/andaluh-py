from epa import cas_to_epa

if __name__ == '__main__':
    import argparse

    parser = argparse.ArgumentParser(description='Translate castellano (español) to EPA andaluz proposal')
    parser.add_argument('text', type=str, help='Text to translate. Enclose into quotes if there\'s more than one word')
    args = parser.parse_args()

    print cas_to_epa(args.text)